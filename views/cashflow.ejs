      <script>

         $('#datepicker').hide()

         $("#datepicker-show").click(function() {
            $("#datepicker").toggle()
         })

         $( "#datepicker" ).datepicker({
               dateFormat: 'dd/mm/yy',
               altField: '#djoined',
               altFormat: 'yy/mm/dd',
               onSelect: function() {
                  $('#datepicker').hide()
               },
            })
