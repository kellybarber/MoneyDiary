                                    </select>
                                    <select id="category-income" name="category" style="width:30%;">
                                       <option value="">Select category</option>
                                       <option value="Bonus">Bonus</option>
                                       <option value="Interest">Interest</option>
                                       <option value="Other">Other</option>
                                       <option value="Salary">Salary</option>
                                    </select>

                                    <button type="button" class="fa fa-calendar" id="datepicker-show" aria-hidden="true"></button>
                                    <div id = "datepicker"></div>
                                    <input id="djoined" name="djoined" type="hidden" class="text" type="date">

                                    <div id="adder-close">
                                       <button type="button" class="btn btn-warning">Cancel</button>
                                    </div>
                                    <div id="submit-button">
                                       <input type="submit" form="transaction" class="btn btn-success" value="Add">
